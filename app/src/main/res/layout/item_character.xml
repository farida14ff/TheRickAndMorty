<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_width="370dp"
        android:layout_height="175dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/character_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_characters"
            />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/characters_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Morty Smith"
                    android:textColor="@color/black"
                    android:textSize="@dimen/big_text_size"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/characters_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Alive"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"/>

                    <TextView
                        android:id="@+id/characters_species"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Human"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Last known location:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/small_text_size"/>

                <TextView
                    android:id="@+id/characters_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Earth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text_size"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>